<Window x:Class="OpenCvTemplateMatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:openCvTemplateMatcher="clr-namespace:OpenCvTemplateMatcher"
        xmlns:openCvSharp="clr-namespace:OpenCvSharp;assembly=OpenCvSharp"
        xmlns:reactive="http://Gu.com/Reactive"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <Window.DataContext>
        <openCvTemplateMatcher:ViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="_File">
                <MenuItem Command="{Binding OpenModelCommand}" Header="Open model" />
                <MenuItem Command="{Binding OpenModelMaskCommand}" Header="Open mask" />
                <MenuItem Command="{Binding OpenSceneCommand}" Header="Open scene" />
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <GroupBox Header="SURF">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="HessianThreshold" />
                        <TextBox  Grid.Row="0" Grid.Column="1" Text="{Binding Surf.HessianThreshold}" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="OctaveLayers" />
                        <TextBox  Grid.Row="1" Grid.Column="1" Text="{Binding Surf.OctaveLayers}" />

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Octaves" />
                        <TextBox  Grid.Row="2" Grid.Column="1" Text="{Binding Surf.Octaves}" />

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Extended" />
                        <CheckBox  Grid.Row="3" Grid.Column="1" IsChecked="{Binding Surf.Extended}" />

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Upright" />
                        <CheckBox  Grid.Row="4" Grid.Column="1" IsChecked="{Binding Surf.Upright}" />
                    </Grid>
                </GroupBox>

                <GroupBox Header="BFMatcher" Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="NormType" />
                        <ComboBox  Grid.Row="0" Grid.Column="1" SelectedItem="{Binding BfMatcher.NormType}" ItemsSource="{reactive:EnumValuesFor {x:Type openCvSharp:NormTypes}}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="CrossCheck" />
                        <CheckBox  Grid.Row="1" Grid.Column="1" IsChecked="{Binding BfMatcher.CrossCheck}" />
                    </Grid>
                </GroupBox>

                <GroupBox Header="Other" Grid.Row="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="HomographyMethod" />
                        <ComboBox  Grid.Row="0" Grid.Column="1" SelectedItem="{Binding HomographyMethod}" ItemsSource="{reactive:EnumValuesFor {x:Type openCvSharp:HomographyMethods}}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="ImageMode" />
                        <ComboBox  Grid.Row="1" Grid.Column="1" SelectedItem="{Binding ImageMode}" ItemsSource="{reactive:EnumValuesFor {x:Type openCvSharp:ImreadModes}}"/>
                    </Grid>
                </GroupBox>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid>
                    <Image Source="{Binding ModelFile}" />
                    <Image Source="{Binding ModelMaskFile}" />
                </Grid>
                <Grid Grid.Column="1">
                    <Image Source="{Binding SceneFile}" />
                    <Image Source="{Binding Overlay}" />
                </Grid>
            </Grid>
        </Grid>

        <StatusBar Grid.Row="2">
            <TextBlock Text="{Binding Milliseconds}" />
        </StatusBar>
    </Grid>
</Window>
